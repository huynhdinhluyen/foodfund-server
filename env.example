# ================================
# FoodFund Microservices Environment Configuration
# ================================

# ================================
# Node Environment
# ================================
NODE_ENV=development

# ================================
# Service Ports & Health Checks
# ================================

# Auth Service
AUTH_HOST=localhost
AUTH_PORT=8080
AUTH_HEALTH_CHECK_PORT=8081

# GraphQL Gateway
GRAPHQL_GATEWAY_HOST=localhost
GRAPHQL_GATEWAY_PORT=8081
GRAPHQL_GATEWAY_HEALTH_CHECK_PORT=8082

# Users Subgraph
USERS_SUBGRAPH_HOST=localhost
USERS_SUBGRAPH_PORT=8082
USERS_SUBGRAPH_HEALTH_CHECK_PORT=8083

# Campaigns Subgraph
CAMPAIGNS_SUBGRAPH_HOST=localhost
CAMPAIGNS_SUBGRAPH_PORT=8083
CAMPAIGNS_SUBGRAPH_HEALTH_CHECK_PORT=8084

# Donations Subgraph
DONATIONS_SUBGRAPH_HOST=localhost
DONATIONS_SUBGRAPH_PORT=8084
DONATIONS_SUBGRAPH_HEALTH_CHECK_PORT=8085

# ================================
# Database Configurations
# ================================

# Users Database
USERS_DATABASE_HOST=localhost
USERS_DATABASE_PORT=5433
USERS_DATABASE_USERNAME=root
USERS_DATABASE_PASSWORD=foodfund
USERS_DATABASE_NAME=users_db

# Campaigns Database
CAMPAIGNS_DATABASE_HOST=localhost
CAMPAIGNS_DATABASE_PORT=5434
CAMPAIGNS_DATABASE_USERNAME=root
CAMPAIGNS_DATABASE_PASSWORD=foodfund
CAMPAIGNS_DATABASE_NAME=campaigns_db

# Auth Service now uses Firebase Authentication (no database needed)

# ================================
# Redis Configurations
# ================================

# Cache Redis
CACHE_REDIS_HOST=localhost
CACHE_REDIS_PORT=6379
CACHE_REDIS_PASSWORD=
CACHE_REDIS_CLUSTER_ENABLED=false
CACHE_REDIS_CLUSTER_RUN_IN_DOCKER=false
CACHE_REDIS_CLUSTER_DOCKER_NETWORK_NAME=

# Session Redis
SESSION_REDIS_HOST=localhost
SESSION_REDIS_PORT=6380
SESSION_REDIS_PASSWORD=
SESSION_REDIS_CLUSTER_ENABLED=false
SESSION_REDIS_CLUSTER_RUN_IN_DOCKER=false
SESSION_REDIS_CLUSTER_DOCKER_NETWORK_NAME=

# Job Redis
JOB_REDIS_HOST=localhost
JOB_REDIS_PORT=6381
JOB_REDIS_PASSWORD=
JOB_REDIS_CLUSTER_ENABLED=false
JOB_REDIS_CLUSTER_RUN_IN_DOCKER=false
JOB_REDIS_CLUSTER_DOCKER_NETWORK_NAME=

# ================================
# Message Broker (Kafka)
# ================================
KAFKA_HOST=localhost
KAFKA_PORT=9092
KAFKA_SASL_ENABLED=false
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=

# ================================
# Authentication & Security
# ================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=30d

# Session Configuration
SESSION_SECRET=your-session-secret-key-here

# Encryption Configuration
CIPHER_SECRET=your-cipher-secret-key-here
BCRYPT_SALT=10

# ================================
# Cache Timeouts (milliseconds)
# ================================
REDIS_CACHE_TIMEOUT_MS=60000
POSTGRESQL_CACHE_TIMEOUT_MS=60000
GRAPHQL_CACHE_TIMEOUT_MS=60000

# ================================
# CORS Origins
# ================================

# GraphQL Gateway CORS Origins (up to 10)
GRAPHQL_ALLOW_ORIGIN_1=http://localhost:3000
GRAPHQL_ALLOW_ORIGIN_2=http://localhost:3001
GRAPHQL_ALLOW_ORIGIN_3=
GRAPHQL_ALLOW_ORIGIN_4=
GRAPHQL_ALLOW_ORIGIN_5=
GRAPHQL_ALLOW_ORIGIN_6=
GRAPHQL_ALLOW_ORIGIN_7=
GRAPHQL_ALLOW_ORIGIN_8=
GRAPHQL_ALLOW_ORIGIN_9=
GRAPHQL_ALLOW_ORIGIN_10=

# Auth Service CORS Origins (up to 10)
AUTH_ALLOW_ORIGIN_1=http://localhost:3000
AUTH_ALLOW_ORIGIN_2=http://localhost:3001
AUTH_ALLOW_ORIGIN_3=
AUTH_ALLOW_ORIGIN_4=
AUTH_ALLOW_ORIGIN_5=
AUTH_ALLOW_ORIGIN_6=
AUTH_ALLOW_ORIGIN_7=
AUTH_ALLOW_ORIGIN_8=
AUTH_ALLOW_ORIGIN_9=
AUTH_ALLOW_ORIGIN_10=

# ================================
# External Services (Optional)
# ================================

# AWS S3 Configuration
S3_BUCKET_NAME=
S3_ENDPOINT=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# ================================
# Firebase Authentication (Required for Auth Service)
# ================================
# Get these from Firebase Console -> Project Settings -> Service accounts
FIREBASE_CREDENTIAL_TYPE=service_account
FIREBASE_CREDENTIAL_PROJECT_ID=your-firebase-project-id
FIREBASE_CREDENTIAL_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_CREDENTIAL_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----\n"
FIREBASE_CREDENTIAL_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CREDENTIAL_CLIENT_ID=your-client-id
FIREBASE_CREDENTIAL_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_CREDENTIAL_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_CREDENTIAL_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CREDENTIAL_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com
FIREBASE_CREDENTIAL_UNIVERSE_DOMAIN=googleapis.com

# Google Cloud OAuth
GOOGLE_CLOUD_OAUTH_CLIENT_ID=
GOOGLE_CLOUD_OAUTH_CLIENT_SECRET=
GOOGLE_CLOUD_OAUTH_REDIRECT_URI=

# ================================
# Backup & Storage
# ================================
BACKUP_DIR=./backups

# ================================
# Development & Debugging
# ================================
PRODUCTION_URL=
E2E_ENABLED=false

# ================================
# Database URLs (Alternative to individual configs)
# ================================
# If you prefer to use connection URLs instead of individual database config
# USERS_DATABASE_URL=postgresql://root:foodfund@localhost:5433/users_db
# CAMPAIGNS_DATABASE_URL=postgresql://root:foodfund@localhost:5434/campaigns_db
# AUTH_DATABASE_URL not needed (Firebase Authentication)

# ================================
# Production Environment Variables
# ================================
# Uncomment and set these for production deployment

# NODE_ENV=production
# JWT_SECRET=your-production-jwt-secret-256-bit-key
# SESSION_SECRET=your-production-session-secret
# CIPHER_SECRET=your-production-cipher-secret

# Database credentials for production
# USERS_DATABASE_PASSWORD=your-production-users-db-password
# CAMPAIGNS_DATABASE_PASSWORD=your-production-campaigns-db-password
# AUTH_DATABASE_PASSWORD=your-production-auth-db-password

# Redis passwords for production
# CACHE_REDIS_PASSWORD=your-production-cache-redis-password
# SESSION_REDIS_PASSWORD=your-production-session-redis-password
# JOB_REDIS_PASSWORD=your-production-job-redis-password

# Kafka SASL for production
# KAFKA_SASL_ENABLED=true
# KAFKA_SASL_USERNAME=your-kafka-username
# KAFKA_SASL_PASSWORD=your-kafka-password

# Production URLs and external services
# PRODUCTION_URL=https://your-production-domain.com
# S3_BUCKET_NAME=your-production-s3-bucket
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=your-production-s3-access-key
# S3_SECRET_ACCESS_KEY=your-production-s3-secret-key
