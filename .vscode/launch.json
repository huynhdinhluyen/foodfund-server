    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Auth Service",
            "program": "${workspaceFolder}/apps/auth/src/main.ts",
            "cwd": "${workspaceFolder}",
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "envFile": "${workspaceFolder}.env",
            "autoAttachChildProcesses": true,
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/dist/**/*.js"]
        }
    ]
}
